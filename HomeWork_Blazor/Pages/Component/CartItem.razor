<button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#modalId">
    <i class="fa">Cart</i>
</button>

<div class="modal fade p-3" id="modalId" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog"
    aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitleId">Cart</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (productInCart.Any())
                        {
                            @foreach (var productItem in productInCart)
                            {
                                <tr>
                                    <td>@productItem.MaSP</td>
                                    <td>@productItem.TenSP</td>
                                    <td>
                                        <img src="@productItem.HinhAnh" alt="Image" style="width: 50px; height: 50px;" />
                                    </td>
                                    <td>@productItem.GiaBan$</td>
                                   
                                    <td>
                                        <button class="btn btn-danger btn-sm" @onclick="() => RemoveFromCart(productItem)">
                                            <i class="fa fa-trash"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">No product in the cart.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public List<ProductVM> productInCart { get; set; } = new List<ProductVM>();

    [Parameter]
    public EventCallback<ProductVM> OnRemoveFromCart { get; set; }

    private async Task RemoveFromCart(ProductVM product)
    {
        productInCart.Remove(product);
        await OnRemoveFromCart.InvokeAsync(product);
    }
}
